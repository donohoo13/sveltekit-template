{
	"bracketSpacing": true,
	"proseWrap": "never",
	"singleQuote": false,
	"semi": true,
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 100,
	"trailingComma": "es5",
	"arrowParens": "always",
	"endOfLine": "lf",
	"quoteProps": "consistent",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": "*.json",
			"options": {
				"printWidth": 160,
				"tabWidth": 2
			}
		}
	]
}
